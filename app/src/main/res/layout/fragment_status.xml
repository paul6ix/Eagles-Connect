<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ella_color"
    android:layout_marginTop="64dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.paulchidi.eaglesconnect.activities.ScrollingActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/omi_p"

                app:border_color="#FF000000" />

            <TextView
                android:id="@+id/textView_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Naomi updated her profile picture"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView_status"
                android:layout_width="270dp"
                android:layout_height="130dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/omi_p" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:checkMark="@color/main_color_green"
            android:checked="true"
            android:checkMarkTint="#a61eea">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/fadugba"
                app:border_color="#FF000000" />

            <TextView
                android:id="@+id/textView_stat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Trending Topic"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView_status1"
                android:layout_width="270dp"
                android:layout_height="130dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="23dp"
                android:scaleType="fitXY"
                android:src="@drawable/alumni" />
            <ImageButton
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:padding="@dimen/pad_10dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_favorite"


                android:id="@+id/checkbox" />

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/yomi"
                app:border_color="#FF000000" />

            <TextView
                android:id="@+id/textView_stat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Yomi wrote"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/imageView_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:text="Softcom's accuracy and timelines in delivering on large scale projects is commendable. It sets them apart from other companies offering similar services in their industry"
                 />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/textView_stat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Sponsored Ad"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green_btn_color" />

            <ImageView
                android:id="@+id/imageView_status3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/waiter" />


        </android.support.v7.widget.CardView>

